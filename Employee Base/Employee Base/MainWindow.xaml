<Window x:Class="Employee_Base.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Base"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Background="Gray" Grid.Row="1" Grid.Column="0" Grid.RowSpan="6">
            <StackPanel Background="#E0E0E0">
                <Button x:Name="BaseButton" Content="Base" Click="BaseButton_Click" Margin="5,5,5,5"/>
                <Button x:Name="EditBaseButton" Content="Edit Base" Click="EditBaseButton_Click" Margin="5,0,5,5"/>
            </StackPanel>
        </DockPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
